@model BandModel
@{
    ViewData["Title"] = "Confirmação para deletar banda";
}

<div class="text-center">
    <h1 class="display-4">Deseja mesmo apagar a banda @Model.BandName?</h1>
</div>

<div class="text-center">
    <a role="button" class="btn btn-danger" asp-controller="Band" asp-route-id="@Model.Id" asp-action="Delete">Deletar banda</a>
    <a role="button" class="btn btn-secondary" asp-controller="Band" asp-action="Index">Cancelar</a>
</div>